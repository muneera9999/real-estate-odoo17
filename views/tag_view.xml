<odoo>
    <record id="tag_view_tree" model="ir.ui.view">
        <field name="name">tag tree</field>
        <field name="model">tag</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" create="1" edit="1" delete="1">
                <field name="name" />
            </tree>
        </field>
    </record>
    <record id="tag_view_form" model="ir.ui.view">
        <field name="name">tag form</field>
        <field name="model">tag</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" />
                        <h2>
                            <field name="name" />
                        </h2>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- select then ctrl + / to make comment -->
    <!-- [] = list, () = tuple  -->


    <record id="tag_action" model="ir.actions.act_window">
        <field name="name">tag</field>
        <field name="res_model">tag</field>

    </record>

    <menuitem
        id="tag_menu_item"
        name="Tags"
        parent="configuration_menu"
        action="tag_action"
    /> <!--
           third level, under Properties
           initialise parent like this 
           to do action we need <record> 
      -->
</odoo>
<odoo>
    <record id="owner_view_tree" model="ir.ui.view">
        <field name="name">Owner Tree</field>
        <field name="model">owner</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" create="1" edit="1" delete="1">
                <field name="name" />
                <field name="phone" />
                <field name="address" />
                <field name="property_ids" />
            </tree>
        </field>
    </record>
    <record id="owner_view_form" model="ir.ui.view">
        <field name="name">Owner Form</field>
        <field name="model">owner</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" />
                        <h2>
                            <field name="name" />
                        </h2>
                    </div>
                    <group>
                    <group string="General Info">
                        <field name="phone" />
                        <field name="address" />
                    </group>
                    <group>
                        <field name="property_ids" widget="many2many_tags"/>
                    </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- select then ctrl + / to make comment -->
    <!-- [] = list, () = tuple  -->


    <record id="owner_action" model="ir.actions.act_window">
        <field name="name">Owner</field>
        <field name="res_model">owner</field>

    </record>

    <menuitem
        id="owner_menu_item"
        name="Owners"
        parent="configuration_menu"
        action="owner_action"
    /> <!--
           third level, under Properties
           initialise parent like this 
           to do action we need <record> 
      -->
</odoo>
<odoo>
    <record id="property_view_tree" model="ir.ui.view">
        <field name="name">property tree</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <tree class="header_custom" multi_edit="1" create="1" edit="1" delete="1">
                <field name="name" />
                <field name="postcode" />
                <field name="owner_id" />
                <field name="date_availability" />
                <field name="selling_price" />
                <field name="state" />
                <field name="tag_ids" />
                <field name="bedrooms" />
                <field name="garage" optional="1" />
                <field name="garden" optional="1" />
            </tree>
        </field>
    </record>
    <record id="property_view_form" model="ir.ui.view">
        <field name="name">property form</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <header>
                        <button name="action_draft" type="object" class="btn-primary"
                            string="Set to Draft"
                            invisible="state == 'draft'" />
                        <button name="action_pending" type="object" class="btn-secondary"
                            string="Pending"
                            invisible="state != 'draft'" />
                        <button name="action_sold" type="object" class="btn-success" string="Sold"
                            invisible="state != 'pending'" /> <!-- only shows up when state is
                        pending -->

                        <field name="state" widget="statusbar" /> <!-- options="{'clickable':1}" and
                        statusbar_visible="draft,sold"-->
                    </header>
                    <div class="oe_title">
                        <label for="name" />
                        <h2>
                            <field name="name" />
                        </h2>
                    </div>
                    <group>
                        <group string="General Info">
                            <field name="date_availability" />
                            <field name="expected_price" />
                            <field name="selling_price" />
                            <field name="diff" />
                            <field name="total" />
                            <field name="postcode" />
                            <field name="bedrooms" />
                        </group>
                        <group string="addional Info">
                            <field name="garage" />
                            <field name="garden" />
                            <field name="garden_orientation" />
                            <field name="owner_id" />
                            <field name="owner_address" />
                            <field name="owner_phone" />

                            <field name="tag_ids" widget="many2many_tags" />
                        </group>
                        <group>
                            <field name="description" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Bedrooms">
                            <field name="line_ids">
                                <!-- i can do this (add tree here) bc its a One2many rel, this can
                                also work for Many2many rel -->
                                <tree editable="button">
                                    <field name="description" />
                                    <field name="area" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <!--adding
                chatter  -->
                <group>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" />
                        <field name="activity_ids" />
                        <field name="message_ids" />
                    </div>
                </group>
            </form>
        </field>
    </record>
    <record id="property_view_search" model="ir.ui.view">
        <field name="name">property search</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="postcode" />

                <filter name="is_garden" string="With Garden" domain="[('garden','=', True)]" />
                <filter name="is_not_garden" string="Without Garden"
                    domain="[('garden','=', False)]" />
                <filter name="is_garage" string="With Garage" domain="[('garage','=', True)]" />

                <filter name="group_garden" string="Garden" context="{'group_by': 'garden'}" />

            </search>
        </field>
    </record>

    <!-- select then ctrl + / to make comment -->
    <!-- [] = list, () = tuple  -->


    <record id="property_action" model="ir.actions.act_window">
        <field name="name">property</field>
        <field name="res_model">property</field>

    </record>

    <menuitem
        id="property_menu_item"
        name="Properties"
        parent="properties_menu"
        action="property_action"
    /> <!--
           third level, under Properties
           initialise parent like this 
           to do action we need <record> 
      -->
</odoo>